generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  clerkUserId  String   @id @map("clerk_user_id")
  email        String   @unique
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @default(now()) @updatedAt @map("updated_at")
  
  // GitHub OAuth
  githubId          Int?    @unique @map("github_id")
  githubUsername    String? @map("github_username")
  githubAccessToken String? @map("github_access_token")
  
  // Usage tracking (per user, not per project)
  tier              String  @default("FREE") // FREE or PRO
  apiRequestsUsed   Int     @default(0) @map("api_requests_used")
  usageResetAt      DateTime @map("usage_reset_at") @default(now())
  
  projects     Project[]
  
  @@index([email])
  @@index([githubId])
  @@map("users")
}

model Project {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String
  description String?
  apiKey      String   @unique @map("api_key")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")
  
  user         User         @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  repositories Repository[]
  
  @@index([userId])
  @@index([apiKey])
  @@map("projects")
}

model Repository {
  id            String   @id @default(uuid())
  projectId     String   @map("project_id")
  userId        String   @map("user_id") // For quick ownership checks
  
  // GitHub metadata
  githubId      Int      @map("github_id")
  githubUrl     String   @map("github_url")
  fullName      String   @map("full_name")
  defaultBranch String   @default("main") @map("default_branch")
  isPrivate     Boolean  @default(false) @map("is_private")
  
  // Webhook
  webhookId     Int?     @map("webhook_id")
  webhookSecret String?  @map("webhook_secret")
  
  // User-facing
  displayName   String?  @map("display_name")
  description   String?
  
  // Indexing status
  status        String   @default("PENDING")
  indexedAt     DateTime? @map("indexed_at")
  lastSyncedAt  DateTime? @map("last_synced_at")
  lastCommitSha String?  @map("last_commit_sha")
  errorMessage  String?  @map("error_message")
  
  // Stats
  fileCount     Int      @default(0) @map("file_count")
  totalSize     Int      @default(0) @map("total_size")
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")
  
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, githubId]) // Same repo can't be added twice to same project
  @@index([projectId, status])
  @@index([userId]) // For quick "show all my repos" queries
  @@index([webhookId])
  @@map("repositories")
}